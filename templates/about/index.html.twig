{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">{{ info.title }}</h1>
        <p class="lead">{{ info.description }}</p>
    </div>

    <div class="row gy-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="h4 card-title text-secondary">Notre mission</h2>
                    <p class="card-text">{{ info.mission }}</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="h4 card-title text-secondary">Notre vision</h2>
                    <p class="card-text">{{ info.vision }}</p>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h2 class="h4 card-title text-secondary">Nos valeurs</h2>
                    <ul class="list-group list-group-flush">
                        {% for value in info.values %}
                            <li class="list-group-item">{{ value }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
