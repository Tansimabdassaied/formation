{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h1 class="card-title text-primary fw-bold mb-3">{{ article.title }}</h1>
            <p class="text-muted small">Publié le {{ article.publishedAt|date('d/m/Y') }}</p>
            <hr>
            <p class="card-text fs-5" style="text-align: justify;">{{ article.content|nl2br }}</p>
        </div>
        <div class="card-footer bg-transparent text-end">
            <a href="{{ path('articles') }}" class="btn btn-outline-primary">
                ← Retour à la liste des articles
            </a>
        </div>
    </div>
</div>
{% endblock %}
