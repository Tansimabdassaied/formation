{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-primary fw-bold">{{ page_title }}</h1>

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm align-middle">
            <thead class="table-dark text-white">
                <tr>
                    <th>Titre</th>
                    <th>Durée</th>
                    <th>Date de début</th>
                    <th>Formateur</th>
                    <th>Détails</th>
                </tr>
            </thead>
            <tbody>
                {% for training in trainings %}
                    <tr>
                        <td class="fw-semibold">{{ training.title }}</td>
                        <td>{{ training.duration }}</td>
                        <td>{{ training.startDate|date('d/m/Y') }}</td>
                        <td>{{ training.instructor }}</td>
                        <td>
                            <a href="{{ path('training_show', {'id': training.id}) }}" class="btn btn-outline-primary btn-sm">
                                Voir plus
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">Aucune formation disponible pour le moment.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
